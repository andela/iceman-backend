{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "one-var": 0,
    "linebreak-style": 0,
    "no-unused-vars": [
      "error",
      {
        "var": "all",
        "args": "none"
      }
    ],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "camelcase": 0,
    "arrow-parens": 0,
    "import/named": 0,
    "no-underscore-dangle": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "import/no-unresolved": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "no-shadow": [
      "error",
      {
        "allow": ["req", "done", "res", "err"]
      }
    ],
    "no-console": 0,
    "import/prefer-default-export": 0,
    "valid-jsdoc": [
      1,
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": true,
        "requireReturnDescription": true
      }
    ],
    "require-jsdoc": [
      1,
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ]
  }
}
